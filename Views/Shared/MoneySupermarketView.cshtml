@model DailyPerformanceReportAuto.ViewModel.DailyQuoteTable


@using (Html.BeginForm("create", "DailyQuotes"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.QuoteSource, @Model.QuoteSource);
    <div class="form-horizontal ">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="form-group col col-md-12 bluebackground">
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Value", htmlAttributes: new { @class = "control-label col-md-4 col ol-md-offset-2 " })
            @Html.Label("Comments", htmlAttributes: new { @class = "control-label col-md-4 ol-md-offset-2 " })
        </div>


        <div class="form-group">
            @Html.Label("Total Queries", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8 ">
                @Html.EditorFor(model => model.TotalQueries, new { htmlAttributes = new { @class = " form-control col-md-4" } })
                @Html.EditorFor(model => model.TotalQueriesComments, new { htmlAttributes = new { @class = "form-control col-md-offset-2  col-md-4" } })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Total Quotes Returned", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8 ">
                @Html.EditorFor(model => model.TotalQuotesReturned, new { htmlAttributes = new { @class = " form-control col-md-4" } })
                @Html.EditorFor(model => model.TotalQuotesReturnedComments, new { htmlAttributes = new { @class = "form-control col-md-offset-2  col-md-4" } })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Total Clicks", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8 ">
                @Html.EditorFor(model => model.TotalClicks, new { htmlAttributes = new { @class = " form-control col-md-2" } })
                @Html.EditorFor(model => model.TotalClicksComments, new { htmlAttributes = new { @class = "form-control col-md-offset-2  col-md-4" } })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Provider Quote Rate %", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8 ">
                @Html.EditorFor(model => model.ProviderQuoteRate, new { htmlAttributes = new { @class = " form-control col-md-4" } })
                @Html.EditorFor(model => model.ProviderQuoteRateComments, new { htmlAttributes = new { @class = "form-control col-md-offset-2  col-md-4" } })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Filtered Quotes", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8 ">
                @Html.EditorFor(model => model.FilteredQuotes, new { htmlAttributes = new { @class = " form-control col-md-4" } })
                @Html.EditorFor(model => model.FilteredQuotesComments, new { htmlAttributes = new { @class = "form-control col-md-offset-2  col-md-4" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Top Quotes", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8 ">
